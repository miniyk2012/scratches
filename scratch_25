def tryEncode(s, encoding="utf-8"):
    try:
        print(s.encode(encoding))
    except UnicodeEncodeError as err:
        print(err)

s = "$"           # UTF-8 String
tryEncode(s)          # é»˜è®¤ç”¨ UTF-8 è¿›è¡Œç¼–ç 
tryEncode(s, "ascii") # å°è¯•ç”¨ ASCII è¿›è¡Œç¼–ç 

s = "é›¨"          # UTF-8 String
tryEncode(s)          # é»˜è®¤ç”¨ UTF-8 è¿›è¡Œç¼–ç 
tryEncode(s, "ascii") # å°è¯•ç”¨ ASCII è¿›è¡Œç¼–ç 
tryEncode(s, "GB2312")  # å°è¯•ç”¨ GB2312 è¿›è¡Œç¼–ç 
